include ../templates/mixins/m-link
include ../templates/global-mixins

section.section.evaluation.js-fade-trigger
	.section_in
		h2.evaluation__title.js-quote!= title
		.evaluation__container
			ul.evaluation__list
				each item in list
					li.evaluation__item.js-fade-item
						.evaluation__item_in
							.evaluation__item_title!= item.title
							.evaluation__item_description!= item.description
							+link('Read More')
